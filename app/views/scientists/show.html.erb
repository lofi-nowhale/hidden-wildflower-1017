<h1>Scientist Details</h1>

<section id="details">
  <p>Name: <%= @scientist.name %></p>
  <p>Specialty: <%= @scientist.specialty %></p>
  <p>University: <%= @scientist.university %></p>
</section>


<section id="lab">
<h3>Current Lab</h3>
<p>Lab: <%= @scientist.lab.name %></p>
</section>

<section id="current_experiments">
<h3>Current Experiments</h3>
<% @scientist.experiments.each do |experiment| %>
  <section id="experiment-<%= experiment.id %>">
    <li>Name: <%= experiment.name %> </li>
    <%= button_to "Remove #{experiment.name}", "/scientists/#{@scientist.id}/experiments/#{experiment.id}", method: :delete %> </li>
  </section>
<% end %> 
</section>